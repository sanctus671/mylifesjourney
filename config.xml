<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.mylifesjourneynz.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My Life's Journey</name>
    <description>Record and reflect the moments that weave together the story of your life.</description>
    <author email="robers@xtra.co.nz" href="https://alzheimers.org.nz/">Alzheimers New Zealand</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="30" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenBackgroundColor" value="0xFFFFFFFF" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="loadUrlTimeoutValue" value="700000" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>
        <resource-file src="resources/android/xml/network_security_config.xml" target="res/xml/network_security_config.xml" />
        <resource-file src="resources/android/icon/values/launcher_background.xml" target="res/values/launcher_background.xml" />
        <resource-file src="resources/android/icon/mipmap-anydpi-v26/launcher.xml" target="res/mipmap-anydpi-v26/launcher.xml" />
        <resource-file src="resources/android/icon/mipmap-anydpi-v26/launcher_round.xml" target="app/src/main/res/mipmap-anydpi-v26/launcher_round.xml" />
        <resource-file src="resources/android/icon/mipmap-ldpi/launcher.png" target="res/mipmap-ldpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-hdpi/launcher.png" target="res/mipmap-hdpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-hdpi/launcher_round.png" target="res/mipmap-hdpi-v4/launcher_round.png" />
        <resource-file src="resources/android/icon/mipmap-hdpi/launcher_foreground.png" target="res/mipmap-hdpi-v4/launcher_foreground.png" />
        <resource-file src="resources/android/icon/mipmap-mdpi/launcher.png" target="res/mipmap-mdpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-mdpi/launcher_round.png" target="res/mipmap-mdpi-v4/launcher_round.png" />
        <resource-file src="resources/android/icon/mipmap-mdpi/launcher_foreground.png" target="res/mipmap-mdpi-v4/launcher_foreground.png" />
        <resource-file src="resources/android/icon/mipmap-xhdpi/launcher.png" target="res/mipmap-xhdpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-xhdpi/launcher_round.png" target="res/mipmap-xhdpi-v4/launcher_round.png" />
        <resource-file src="resources/android/icon/mipmap-xhdpi/launcher_foreground.png" target="res/mipmap-xhdpi-v4/launcher_foreground.png" />
        <resource-file src="resources/android/icon/mipmap-xxhdpi/launcher.png" target="res/mipmap-xxhdpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-xxhdpi/launcher_round.png" target="res/mipmap-xxhdpi-v4/launcher_round.png" />
        <resource-file src="resources/android/icon/mipmap-xxhdpi/launcher_foreground.png" target="res/mipmap-xxhdpi-v4/launcher_foreground.png" />
        <resource-file src="resources/android/icon/mipmap-xxxhdpi/launcher.png" target="res/mipmap-xxxhdpi-v4/launcher.png" />
        <resource-file src="resources/android/icon/mipmap-xxxhdpi/launcher_round.png" target="res/mipmap-xxxhdpi-v4/launcher_round.png" />
        <resource-file src="resources/android/icon/mipmap-xxxhdpi/launcher_foreground.png" target="res/mipmap-xxxhdpi-v4/launcher_foreground.png" />
        <resource-file src="resources/android/styles.xml" target="res/values/styles.xml" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/activity[@android:label='@string/activity_name']">
            <activity android:theme="@style/mljTheme" />
        </edit-config>
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:icon="@mipmap/launcher" android:roundIcon="@mipmap/launcher_round" />
        </edit-config>
        <splash density="port-ldpi" src="resources/android/splash/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="resources/android/splash/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="resources/android/splash/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="resources/android/splash/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/splash-port-xxxhdpi.png" />
        <splash density="land-ldpi" src="resources/android/splash/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="resources/android/splash/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="resources/android/splash/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="resources/android/splash/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/splash-land-xxxhdpi.png" />
        <config-file parent="/*" target="AndroidManifest.xml">
            <queries>
                <intent>
                    <action android:name="android.media.action.IMAGE_CAPTURE" />
                </intent>
                <intent>
                    <action android:name="android.intent.action.GET_CONTENT" />
                </intent>
            </queries>
        </config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="ios-statusbarstyle" value="black-opaque" />
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>Send Geolocated notifications</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Send Geolocated notifications</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>Select images for your profile and memories</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Take pictures for your profile and memories</string>
        </edit-config>
        <icon height="1024" src="resources/ios/icon/icon-1024.png" width="1024" />
        <icon height="29" src="resources/ios/icon/icon-small.png" width="29" />
